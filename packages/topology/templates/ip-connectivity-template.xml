<config-template xmlns="http://tail-f.com/ns/config/1.0"
  servicepoint="ip-connectivity">

  <?macro GetSortedDeviceIds device_id_1 device_id_2?>
    <?set LOWER_DEVICE_ID='{$device_id_1}'?>
    <?set HIGHER_DEVICE_ID='{$device_id_2}'?>
    <?if {number($device_id_1) > number($device_id_2)?>
      <?set LOWER_DEVICE_ID='{$device_id_2}'?>
      <?set HIGHER_DEVICE_ID='{$device_id_1}'?>
    <?end?>
  <?endmacro?>

  <?macro GigabitEthernetAddresses device_name device_id interface_id connected_device_name connected_interface_id?>
    <?set IPV4_ADDRESS={concat(/physical-interfaces/ipv4-subnet-start, '.', $LOWER_DEVICE_ID, '.', $HIGHER_DEVICE_ID, '.', $device_id)}?>
    <?set IPV6_ADDRESS={/physical-interfaces/ipv6-subnet-start}::{$LOWER_DEVICE_ID}:{$HIGHER_DEVICE_ID}:{$device_id}?>
    <?set DESCRIPTION=Connection to device {$connected_device_name} destination interface {$connected_interface_id}?>
    <devices xmlns="http://tail-f.com/ns/ncs">
      <device tags="nocreate">
        <name>{$device_name}</name>
        <config>

          <interface xmlns="http://tail-f.com/ned/cisco-ios-xr">
            <GigabitEthernet>
              <id>0/0/0/{string($interface_id)}</id>
              <description tags="merge">{$DESCRIPTION}</description>
              <?if {not(exclude-ip-connectivity)}?>
                <ipv4 tags="merge">
                  <address>
                    <ip>{$IPV4_ADDRESS}</ip>
                    <mask>255.255.255.0</mask>
                  </address>
                </ipv4>
                <ipv6 tags="merge" when="{/physical-interfaces/ipv6-subnet-start}">
                  <address>
                    <prefix-list>
                      <prefix>{$IPV6_ADDRESS}/112</prefix>
                    </prefix-list>
                  </address>
                </ipv6>
              <?end?>
              <shutdown tags="delete"/>
            </GigabitEthernet>
            <FourHundredGigE>
              <id>0/0/0/{string($interface_id)}</id>
              <description tags="merge">{$DESCRIPTION}</description>
              <?if {not(exclude-ip-connectivity)}?>
                <ipv4 tags="merge">
                  <address>
                    <ip>{$IPV4_ADDRESS}</ip>
                    <mask>255.255.255.0</mask>
                  </address>
                </ipv4>
                <ipv6 tags="merge" when="{/physical-interfaces/ipv6-subnet-start}">
                  <address>
                    <prefix-list>
                      <prefix>{$IPV6_ADDRESS}/112</prefix>
                    </prefix-list>
                  </address>
                </ipv6>
              <?end?>
              <shutdown tags="delete"/>
            </FourHundredGigE>
          </interface>

          <interface xmlns="urn:ios">
            <GigabitEthernet tags="merge">
              <name>0/{string($interface_id)}</name>
              <description>{$DESCRIPTION}</description>
              <?if {not(exclude-ip-connectivity)}?>
                <ip>
                  <no-address>
                    <address tags="delete"/>
                  </no-address>
                  <address>
                    <primary>
                      <address>{$IPV4_ADDRESS}</address>
                      <mask>255.255.255.0</mask>
                    </primary>
                  </address>
                </ip>
                <ipv6 when="{/physical-interfaces/ipv6-subnet-start}">
                  <address>
                    <prefix-list>
                      <prefix>{$IPV6_ADDRESS}/112</prefix>
                    </prefix-list>
                  </address>
                </ipv6>
              <?end?>
              <shutdown tags="delete"/>
            </GigabitEthernet>
          </interface>

          <configuration xmlns="http://xml.juniper.net/xnm/1.1/xnm">
            <interfaces>
              <interface tags="merge">
                <name>et-0/0/{string($interface_id)}</name>
                <description>{$DESCRIPTION}</description>
                <unit>
                  <name>0</name>
                  <?if {not(exclude-ip-connectivity)}?>
                    <family>
                      <inet>
                        <address>
                          <name>{$IPV4_ADDRESS}/24</name>
                        </address>
                      </inet>
                    </family>
                    <family>
                      <inet6 when="{/physical-interfaces/ipv6-subnet-start}">
                        <address>
                          <name>{$IPV6_ADDRESS}/112</name>
                        </address>
                      </inet6>
                    </family>
                  <?end?>
                </unit>
              </interface>
            </interfaces>
          </configuration>

          <interface xmlns="urn:nokia.com:srlinux:chassis:interfaces" tags="merge">
            <name>ethernet-1/{string($interface_id)}</name>
            <admin-state>enable</admin-state>
            <subinterface>
              <index>0</index>
              <admin-state>enable</admin-state>
              <ipv4>
                <admin-state>enable</admin-state>
                <address>
                  <ip-prefix>{$IPV4_ADDRESS}/24</ip-prefix>
                  <primary/>
                </address>
              </ipv4>
            </subinterface>
          </interface>
          <network-instance xmlns="urn:nokia.com:srlinux:net-inst:network-instance" tags="merge">
            <name>default</name>
            <admin-state>enable</admin-state>
            <interface>
              <name>ethernet-1/{$interface_id}.0</name>
            </interface>
          </network-instance>

        </config>
      </device>
    </devices>
  <?endmacro?>

  <devices xmlns="http://tail-f.com/ns/ncs">
    <?foreach {../devices/device}?>
      <device tags="nocreate" when="{not(control-plan-id)}">
        <name>{device-name}</name>
        <?set DEVICE_ID={id}?>
        <config>

          <?foreach {/loopback-interfaces/loopback}?>
            <interface xmlns="http://tail-f.com/ned/cisco-ios-xr">
              <Loopback tags="merge">
                <id>{id}</id>
                <ipv4>
                  <address>
                    <ip>{ipv4-subnet-start}.{$DEVICE_ID}</ip>
                    <mask>255.255.255.255</mask>
                  </address>
                </ipv4>
                <ipv6 when="{ipv6-subnet-start}">
                  <address>
                    <prefix-list>
                      <prefix>{ipv6-subnet-start}::{$DEVICE_ID}/128</prefix>
                    </prefix-list>
                  </address>
                </ipv6>
              </Loopback>
            </interface>

            <interface xmlns="urn:ios">
              <Loopback tags="merge">
                <name>{id}</name>
                <ip>
                  <address>
                    <primary>
                      <address>{ipv4-subnet-start}.{$DEVICE_ID}</address>
                      <mask>255.255.255.255</mask>
                    </primary>
                  </address>
                </ip>
                <ipv6 when="{ipv6-subnet-start}">
                  <address>
                    <prefix-list>
                      <prefix>{ipv6-subnet-start}::{$DEVICE_ID}/128</prefix>
                    </prefix-list>
                  </address>
                </ipv6>
              </Loopback>
            </interface>

            <configuration xmlns="http://xml.juniper.net/xnm/1.1/xnm">
              <interfaces>
                <interface tags="merge">
                  <name>lo0</name>
                  <unit>
                    <name>0</name>
                    <family>
                      <inet>
                        <address>
                          <name>{ipv4-subnet-start}.{$DEVICE_ID}/32</name>
                          <primary when="{boolean(primary)}"/>
                          <preferred when="{boolean(primary)}"/>
                        </address>
                      </inet>
                      <inet6 when="{ipv6-subnet-start}">
                        <address>
                          <name>{ipv6-subnet-start}::{$DEVICE_ID}/128</name>
                          <primary when="{boolean(primary)}"/>
                          <preferred when="{boolean(primary)}"/>
                        </address>
                      </inet6>
                    </family>
                  </unit>
                </interface>
              </interfaces>
            </configuration>

            <?set LOOPBACK_NAME="lo{id}"?>
            <?if {id = 0}?>
              <?set LOOPBACK_NAME="system0"?>
            <?end?>
            <interface xmlns="urn:nokia.com:srlinux:chassis:interfaces" tags="merge">
              <name>{$LOOPBACK_NAME}</name>
              <admin-state>enable</admin-state>
              <subinterface>
                <index>0</index>
                <admin-state>enable</admin-state>
                <ipv4>
                  <admin-state>enable</admin-state>
                  <address>
                    <ip-prefix>{ipv4-subnet-start}.{$DEVICE_ID}/32</ip-prefix>
                  </address>
                </ipv4>
              </subinterface>
            </interface>
            <network-instance
                xmlns="urn:nokia.com:srlinux:net-inst:network-instance" tags="merge">
              <name>default</name>
              <admin-state>enable</admin-state>
              <interface>
                <name>{$LOOPBACK_NAME}.0</name>
              </interface>
            </network-instance>
          <?end?>

        </config>
      </device>
    <?end?>
  </devices>

  <?if {physical-interfaces}?>
    <?foreach {../links/link}?>
      <?expand GetSortedDeviceIds
        device_id_1=deref(a-end-device)/../id
        device_id_2=deref(z-end-device)/../id
      ?>
      <?expand GigabitEthernetAddresses
        device_name=a-end-device
        device_id=deref(a-end-device)/../id
        interface_id=a-end-interface/id
        connected_device_name=z-end-device
        connected_interface_id=z-end-interface/id
      ?>
      <?set A_END_IPV4_ADDRESS={$IPV4_ADDRESS}?>
      <?expand GigabitEthernetAddresses
        device_name=z-end-device
        device_id=deref(z-end-device)/../id
        interface_id=z-end-interface/id
        connected_device_name=a-end-device
        connected_interface_id=a-end-interface/id
      ?>
      <topologies xmlns="http://example.com/topology">
        <topology>
          <name>{string(../../name)}</name>
          <links>
            <link>
              <a-end-device>{a-end-device}</a-end-device>
              <z-end-device>{z-end-device}</z-end-device>
              <a-end-interface>
                <ip-address>{$A_END_IPV4_ADDRESS}</ip-address>
              </a-end-interface>
              <z-end-interface>
                <ip-address>{$IPV4_ADDRESS}</ip-address>
              </z-end-interface>
            </link>
          </links>
        </topology>
      </topologies>
    <?end?>

    <?foreach {../networks/network}?>
      <?foreach {devices/device}?>
        <?set IPV4_ADDRESS={concat(../../ipv4-subnet-start, '.', deref(name)/../id)}?>
        <devices xmlns="http://tail-f.com/ns/ncs">
          <device tags="nocreate">
            <name>{name}</name>
            <config>
              <interface xmlns="http://tail-f.com/ned/cisco-ios-xr">
                <GigabitEthernet>
                  <id>0/0/0/{string(interface/id)}</id>
                  <description tags="merge">{$DESCRIPTION}</description>
                  <ipv4 tags="merge">
                    <address>
                      <ip>{$IPV4_ADDRESS}</ip>
                      <mask>255.255.255.0</mask>
                    </address>
                  </ipv4>
                  <shutdown tags="delete"/>
                </GigabitEthernet>
                <FourHundredGigE>
                  <id>0/0/0/{string(interface/id)}</id>
                  <description tags="merge">{$DESCRIPTION}</description>
                  <ipv4 tags="merge">
                    <address>
                      <ip>{$IPV4_ADDRESS}</ip>
                      <mask>255.255.255.0</mask>
                    </address>
                  </ipv4>
                  <shutdown tags="delete"/>
                </FourHundredGigE>
              </interface>
              <configuration xmlns="http://xml.juniper.net/xnm/1.1/xnm">
                <interfaces>
                  <interface tags="merge">
                    <name>et-0/0/{string(interface/id)}</name>
                    <description>{$DESCRIPTION}</description>
                    <unit>
                      <name>0</name>
                      <family>
                        <inet>
                          <address>
                            <name>{$IPV4_ADDRESS}/24</name>
                          </address>
                        </inet>
                      </family>
                    </unit>
                  </interface>
                </interfaces>
              </configuration>
              <interface xmlns="urn:nokia.com:srlinux:chassis:interfaces" tags="merge">
                <name>ethernet-1/{string(interface/id)}</name>
                <admin-state>enable</admin-state>
                <subinterface>
                  <index>0</index>
                  <admin-state>enable</admin-state>
                  <ipv4>
                    <admin-state>enable</admin-state>
                    <address>
                      <ip-prefix>{$IPV4_ADDRESS}/24</ip-prefix>
                      <primary/>
                    </address>
                  </ipv4>
                </subinterface>
              </interface>
              <network-instance xmlns="urn:nokia.com:srlinux:net-inst:network-instance" tags="merge">
                <name>default</name>
                <admin-state>enable</admin-state>
                <interface>
                  <name>ethernet-1/{interface/id}</name>
                </interface>
              </network-instance>
            </config>
          </device>
        </devices>
        <topologies xmlns="http://example.com/topology">
          <topology>
            <name>{string(../../../../name)}</name>
            <networks>
              <network>
                <name>{string(../../name)}</name>
                <devices>
                  <device>
                    <name>{name}</name>
                    <interface>
                      <ip-address>{$IPV4_ADDRESS}</ip-address>
                    </interface>
                  </device>
                </devices>
              </network>
            </networks>
          </topology>
        </topologies>
      <?end?>
    <?end?>
  <?end?>
</config-template>
